 <%- include('header'); -%>        <!-- All the boilerPlate from header.ejs   -->

        <!-- <h1> It's  </h1>  To add key -->
        <div class="box" id ="heading">
            <h1> <strong> <%= listTitle %> </strong></h1>
        </div>
        

        <!-- Adding new lists entered by user  -->
        <div class ="box">
            <% newList.forEach(function(listName) { %>
                <form action="/delete" method="post">
                    <div class ="item">
                        <input type="checkbox" name="checkers" value="<%= listName._id %>" onChange="this.form.submit()"> <!-- onChange used to submit checkbox as if it were a submit button -->                       
                        <p><%= listName.name; %> </p>
                        <input type="hidden" name="listed" value= <%= listTitle %> > </input>
                    </div>
                </form> 
            <% }) %>
            
            
                
            <form action="/" method="post" class="item">
                <input type="text" name="newItem" placeholder="Add a new Item" autocomplete="off">
                <button type="submit" name="list" value=<%= listTitle %> >+</button>
            </form>
            
        </div>
             
    <%- include('footer'); -%>          <!-- All the boilerPlate from footer.ejs   -->

    